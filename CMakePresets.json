{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/out/build",
            "installDir": "${sourceDir}/out/install/4DG.app",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "configuration": "RelWithDebInfo",
            "targets": [ "install" ]
        },
        {
            "name": "generic-build",
            "hidden": true,
            "configurePreset": "default",
            "targets": [ "4dGraphics" ]
        },
        {
            "name": "debug",
            "inherits": [ "generic-build" ],
            "configuration": "Debug"
        },
        {
            "name": "release",
            "inherits": [ "generic-build" ],
            "configuration": "Release"
        },
        {
            "name": "rel-with-deb-info",
            "inherits": [ "generic-build" ],
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "min-size-rel",
            "inherits": [ "generic-build" ],
            "configuration": "MinSizeRel"
        }
    ]
}