{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-multi-vcpkg",
            "displayName": "Ninja Multi-Config + vcpkg",
            "description": "Configure with vcpkg toolchain and generate Ninja Multi-Config project",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "ninja-multi-system",
            "displayName": "Ninja Multi-Config + system packages",
            "description": "Configure with system packages and generate Ninja Multi-Config project",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "ninja-vcpkg",
            "displayName": "Ninja + vcpkg",
            "description": "Configure with vcpkg toolchain and generate Ninja project",
            "hidden": true,
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "environment": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-debug-vcpkg",
            "displayName": "Ninja + vcpkg (Debug)",
            "inherits": "ninja-vcpkg",
            "environment": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ninja-release-vcpkg",
            "displayName": "Ninja + vcpkg (Release)",
            "inherits": "ninja-vcpkg",
            "environment": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-debug-vcpkg",
            "displayName": "Ninja + vcpkg (Debug)",
            "description": "Build Debug configuration with Ninja",
            "configurePreset": "ninja-debug-vcpkg"
        }
    ],
    "testPresets": [
    ]
}