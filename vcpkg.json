{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "4dgraphics",
  "version-semver": "0.2.0",
  "dependencies": [
    "assimp",
    "stb",
    "glm",
    {
      "name": "imgui",
      "features": [ "sdl2-binding", "vulkan-binding" ]
    },
    "volk",
    "vulkan-memory-allocator",
    "portable-snippets",
    "glslang",
    "spirv-tools",
    "taskflow",
    {
      "name": "sdl2",
      "features": [ "vulkan" ]
    }
  ],
  "$unusedOldDeps": [
    "meshoptimizer",
    "imguizmo"
  ]
}
