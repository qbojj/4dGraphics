{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "dependencies": [
    "argparse",
    "fastgltf",
    "glm",
    "stb",
    "taskflow",
    "vulkan-headers",
    "vulkan-memory-allocator-hpp",
    "unordered-dense",
    "ktx",
    {
      "name": "imgui",
      "features": [
        "sdl2-binding",
        "vulkan-binding"
      ]
    },
    {
      "name": "sdl2",
      "features": [
        "vulkan"
      ]
    },
    {
      "name": "tracy",
      "features": [
        "on-demand"
      ]
    },
    {
      "name": "shaderc",
      "host": true
    }
  ]
}
